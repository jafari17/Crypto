@model IEnumerable<ReportUserAlertsDto>

@{
    ViewData["Title"] = "Home Page";

    //var UserPriceSteps = 1000;
    var UserPriceSteps = ViewBag.UserPriceSteps;
}

<div class="text-center">
    <h2>@ViewBag.LastPrice</h2>
    <h3 class="display-4">Alert list</h3>



    @*    <div class="col-2">
    @{

    if (ViewBag.UserHasAutoAlert == true)
    {
    <button><a class="nav-link text-dark" asp-controller="AlertAuto" asp-action="DeleteAlertAuto">DELETE Auto Price</a></button>
    }
    else
    {
    <button><a class="nav-link text-dark" asp-controller="AlertAuto" asp-action="AddAlertAuto">Add Auto Price</a></button>
    }
    }

    </div>*@

    <div class="col-3">


        <h4 class="text-success" id="AlertText"></h4>

        <div class="d-flex">
            <select class="form-select form-select-lg mb-3">
                <option value="0">No Alert Auto</option>
                <option value="10"> Test Alert Auto 10</option>
                <option value="500">Alert Auto 500</option>
                <option value="1000">Alert Auto 1000</option>
                <option value="2000">Alert Auto 2000</option>
                <option value="5000">Alert Auto 5000</option>
            </select>

            <button id="activate-code" class="mb-3">Submit</button>

        </div>


    </div>


    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Date RegisterTime</th>
                <th scope="col">User Email</th>
                <th scope="col">price</th>
                <th scope="col">Price Difference</th>
                <th scope="col">Last TouchPrice</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DateRegisterTime</td>
                        <td>@item.EmailAddress</td>
                        <td>@item.Price</td>
                        <td>@Convert.ToInt32(item.PriceDifference)</td>

                        @if (item.LastTouchPrice != null)
                        {
                            if (item.IsCrossedUp.HasValue)
                            {
                                <td>
                                    @item.LastTouchPrice
                                    @{
                                        if (item.IsCrossedUp.Value)
                                        {
                                            <samp>UP</samp>
                                        }
                                        else
                                        {
                                            <samp>Down</samp>
                                        }
                                    }
                                </td>
                            }
                            else
                            {
                                <td> - </td>
                            }
                        }
                        else
                        {
                            <td>-</td>
                        }
                        <td>
                            <a asp-action="RemovePrice" asp-route-id="@item.AlertId">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script>


    $(document).ready(function () {

        $('#activate-code').click(function () {
            // Code to be executed when the button is clicked

            var selectedValue = $('.form-select').val();

            $.ajax({
                url: "@(Url.Action("AddAlertAutoAjax", "AlertAuto"))",
                type: 'POST',
                data: { selectedPriceSteps: selectedValue },
                success: function (response) {
                    console.log(response);


                    $("h6").text(response);
                    $("#AlertText").text(response);

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.error(textStatus + ": " + errorThrown);
                }
            });
        });


        var selectElement = $('.form-select');

        var valueToSelect = @UserPriceSteps;

        selectElement.val(valueToSelect).change();
    });
</script>