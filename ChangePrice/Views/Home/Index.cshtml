@model IEnumerable<RegisterPriceModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">لیست قیمت های ثبتی</h1>
    <br/>
    <table class="table">
        <thead>
        <tr>
                <th scope="col">Date RegisterTime</th>
                <th scope="col">price</th>
                <th scope="col">Price Difference</th>
                <th scope="col">Last TouchPrice</th>
                <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DateRegisterTime</td>
                        <td>@item.price</td>
                        
                        <td>@item.PriceDifference</td>
                        
@*                     @item.LastTouchPrice != DateTime.MinValue ? <td>@item.LastTouchPrice @item.TouchDirection</td> : <td>-</td>*@

                        

                        @if (item.LastTouchPrice != DateTime.MinValue)
                        {
                            <td>@item.LastTouchPrice  @item.TouchDirection</td>
                        }
                        else
                        {
                            <td>-</td>
                        }
                        <td>
                            <a asp-action="RemovePrice" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>