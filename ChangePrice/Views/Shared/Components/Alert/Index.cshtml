            <form id="FormAddAlert">
                <div class="modal-body">
                    <div class="form-group">
                        <price for="price" class="control-label">price</price>
                        <input id="price" name="price" class="form-control" type="number" required />
                    </div>
                    <br />

                    <div class="form-group">
                        <label for="UserId" class="control-label">UserId</label>
                        <select id="UserId" name="UserId" class="form-control" required>
                            <option value="">-- Select User --</option>
                            @{
                                foreach (var Useritem in ViewBag.UserList)
                                {
                                    <option value=@(Useritem.UserId)>@(Useritem.Name)</option>
                                }
                            }
                        </select>
                    </div>
                    <br />


                    <div class="form-group">
                        <label for="Description" class="control-label">Description</label>
                        <input id="Description" name="Description" class="form-control"  />
                    </div>

                    <div id="resultAddAlert" class="alert text-primary" role="alert"></div>

                    <div class="modal-footer">
                        <button id="ButtonCloseAddAlert" type="button" class="btn btn-secondary" data-bs-dismiss="modal">close</button>
                        <div class="form-group">
                            <input id="ButtonAddAlert" value="Add" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
