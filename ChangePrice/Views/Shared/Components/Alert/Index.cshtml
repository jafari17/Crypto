<script>


    $("#ButtonAddAlert").click(function (e) { // Target the button with the correct ID
        e.preventDefault(); // Prevent default form submission

        var formData = $("#FormAddAlert").serialize(); // Collect form data

        console.log("formData")
        console.log(formData)

        $.ajax({
            url: "/Home/AddAlertajax", 
            type: "POST",
            data: formData,
            dataType: "json",


            success: function (response) {
                $("#resultAddAlert").text(response.message);

                console.log(response.message)

                if (response.message === "successfully") {

                    console.log("in if true ")

                    //$("#ButtonCloseAddAlert").click();

                    $(location).attr('href', $(location).attr('href'));

                }
            },

            error: function (jqXHR, textStatus, errorThrown) {
                // Handle error
                console.error("AJAX error:", textStatus, errorThrown);
            }
        });
    });

</script>